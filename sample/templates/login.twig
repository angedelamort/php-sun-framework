{% extends "shared/defaultLayout.twig" %}

{% block content %}
    <div class="ui segment">
        <h1>Login</h1>
        <form class="ui form" action="login" method="POST">
            {{ csrf() }}
            <div class="field">
                <label>First Name</label>
                <input type="text" name="name" placeholder="enter text here">
            </div>

            <input class="ui button" type="submit">
        </form>
    </div>
{% endblock %}