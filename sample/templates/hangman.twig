{% extends "shared/defaultLayout.twig" %}

{% block content %}
    <div class="ui segment">
        <h1>Hangman</h1>
        <h2>WORD:
            {% for character in guess %}
                {{ character }}
            {% endfor %}
        </h2>
        <h3>Guess Count {{ guessCount }}</h3>
        <form class="ui form" action="state" method="POST">
            {{ csrf() }}
            <div class="inline field">
                <label>Guess a Letter</label>
                <input type="text" name="letter" maxlength="1" placeholder="type a letter" tabindex="0" autofocus>
            </div>
            <input class="ui button green" type="submit" name="action" value="Try">
        </form>
        <div class="padding-top-1">
            <form class="ui form" action="state" method="POST">
                {{ csrf() }}
                <input class="ui tiny button red" type="submit" name="action" value="Reset">
            </form>
        </div>
    </div>
{% endblock %}